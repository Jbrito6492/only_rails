<div class="flex items-center w-full">
  <div class="w-full bg-white rounded shadow-lg p-8 m-4 md:max-w-lg md:mx-auto">
    <h2 class="block w-full text-center text-grey-darkest mb-6">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "mb-4 md:flex md:justify-between") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-input mb-4 rounded-full">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-sm" %>
      </div>
      <div class="form-input mb-4 rounded-full">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-sm" %>
      </div>

      <div class="form-input mb-4 rounded-full">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-sm" %>
      </div>
      <div class="text-white focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm sm:w-auto px-5 py-2.5 text-center dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-blue-800 mb-4">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    <div class="text-white focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm sm:w-auto px-5 py-2.5 text-center dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-blue-800">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>